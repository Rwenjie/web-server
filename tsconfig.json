{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"removeComments": true,
		"sourceMap": true,
		"newLine": "LF",

//		输出到其他目录会导致另外的package引用不到
//		"outDir": "dist",

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	}
}
